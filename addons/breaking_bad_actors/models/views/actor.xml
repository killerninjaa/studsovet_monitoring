<?xml version="1.0" encoding="utf-8"?>
<odoo> 
    <record id="view_breaking_bad_actor_form" model="ir.ui.view">
        <field name="name">breakingbad.actor.form</field>
        <field name="model">breakingbad.actor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="address"/>
                        <field name="phone"/>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>  

    <record id="view_breaking_bad_actor_tree" model="ir.ui.view">
        <field name="name">breakingbad.actor.tree</field>
        <field name="model">breakingbad.actor</field>
        <field name="arch" type="xml">
            <tree>
                <header>    
                    <button name="custom_button_method" string="export JSON" type="object"/>
                </header>  
                <field name="name"/>
                <field name="address"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>                   

    <record id="action_actor" model="ir.actions.act_window">  
        <field name="name">Actors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">breakingbad.actor</field>
        <field name="view_mode">tree,form</field>
    </record>    

    <menuitem id="menu_breaking_bad_actor"
        name="Actors"
        parent="menu_breaking_bad_root"
        action="action_actor"
        sequence="10"/>  
</odoo>